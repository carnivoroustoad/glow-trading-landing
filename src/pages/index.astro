---
import Layout from '../layouts/Layout.astro';
---

<Layout>
	<div class="gradient-bg"></div>
	<main>
		<nav>
			<div class="logo">GLOW TRADING</div>
		</nav>

		<header>
			<h1>Transform Your Men's Beauty Business</h1>
			<p>We build software that helps men look and feel their best.</p>
			<a href="mailto:hi@glow.trading" class="email">hi@glow.trading</a>
		</header>
	</main>
</Layout>

<style>
	.gradient-bg {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: linear-gradient(-45deg, #00B894, #81ECEC, #00CEC9, #00B894);
		background-size: 400% 400%;
		animation: gradient 15s ease infinite;
		z-index: -1;
		opacity: 0.15;
	}

	@keyframes gradient {
		0% {
			background-position: 0% 50%;
		}
		50% {
			background-position: 100% 50%;
		}
		100% {
			background-position: 0% 50%;
		}
	}

	main {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	nav {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 2rem 0;
	}

	.logo {
		font-weight: 700;
		font-size: 1.5rem;
		color: var(--color-primary);
	}

	.nav-links {
		display: none;
	}

	header {
		padding: 6rem 0;
		text-align: center;
		max-width: 800px;
		margin: 0 auto;
	}

	h1 {
		font-size: 3.5rem;
		margin-bottom: 1.5rem;
	}

	p {
		font-size: 1.25rem;
		color: #636e72;
		margin-bottom: 2rem;
	}

	.email {
		display: inline-block;
		font-size: 1.5rem;
		color: var(--color-accent);
		text-decoration: none;
		font-weight: 600;
		transition: color 0.3s ease;
	}

	.email:hover {
		color: var(--color-primary);
	}

	@media (max-width: 768px) {
		h1 {
			font-size: 2.5rem;
		}

		.nav-links {
			display: none;
		}

		.email {
			font-size: 1.25rem;
		}
	}
</style>
