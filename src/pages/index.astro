---
import Layout from '../layouts/Layout.astro';
---

<Layout>
	<div class="cursor"></div>
	<div class="gradient-bg"></div>
	<main>
		<nav>
			<div class="logo">GLOW TRADING</div>
		</nav>

		<header>
			<h1>Transform Your Men's Beauty Business</h1>
			<p>We build software that helps men look and feel their best.</p>
			<a href="mailto:hi@glow.trading" class="email">hi@glow.trading</a>
		</header>
	</main>
</Layout>

<style>
	.cursor {
		width: 20px;
		height: 20px;
		border: 2px solid var(--color-accent);
		border-radius: 50%;
		position: fixed;
		pointer-events: none;
		z-index: 999;
		transition: all 0.1s ease;
		transition-property: width, height, border;
		will-change: width, height, transform, border;
		transform: translate(-50%, -50%);
		backdrop-filter: invert(1);
	}

	.cursor.hover {
		width: 40px;
		height: 40px;
		border-width: 3px;
	}

	.gradient-bg {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: linear-gradient(-45deg, #00B894, #81ECEC, #00CEC9, #00B894);
		background-size: 400% 400%;
		animation: gradient 15s ease infinite;
		z-index: -1;
		opacity: 0.1;
		filter: blur(50px);
	}

	main {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	nav {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 2rem 0;
	}

	.logo {
		font-weight: 700;
		font-size: 1.5rem;
		color: var(--color-primary);
		letter-spacing: -0.5px;
	}

	header {
		padding: 8rem 0;
		text-align: center;
		max-width: 800px;
		margin: 0 auto;
	}

	h1 {
		font-size: 4rem;
		margin-bottom: 1.5rem;
		letter-spacing: -1.5px;
		line-height: 1.1;
		background: linear-gradient(to right, var(--color-primary), var(--color-accent));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	p {
		font-size: 1.5rem;
		color: #636e72;
		margin-bottom: 2.5rem;
		line-height: 1.6;
		letter-spacing: -0.5px;
	}

	.email {
		display: inline-block;
		font-size: 1.5rem;
		color: var(--color-accent);
		text-decoration: none;
		font-weight: 600;
		transition: all 0.3s ease;
		padding: 0.5rem 1rem;
		border-radius: 8px;
		background: rgba(0, 184, 148, 0.1);
	}

	.email:hover {
		background: rgba(0, 184, 148, 0.2);
		transform: translateY(-2px);
	}

	@media (max-width: 768px) {
		h1 {
			font-size: 2.5rem;
		}

		p {
			font-size: 1.25rem;
		}

		.email {
			font-size: 1.25rem;
		}

		.cursor {
			display: none;
		}
	}
</style>

<script>
	const cursor = document.querySelector('.cursor');
	const links = document.querySelectorAll('a');

	document.addEventListener('mousemove', (e) => {
		cursor.style.left = e.clientX + 'px';
		cursor.style.top = e.clientY + 'px';
	});

	links.forEach(link => {
		link.addEventListener('mouseenter', () => {
			cursor.classList.add('hover');
		});
		link.addEventListener('mouseleave', () => {
			cursor.classList.remove('hover');
		});
	});
</script>
